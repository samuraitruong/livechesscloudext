{
  "manifest_version": 3,
  "name": "Live Chess Cloud Extension",
  "version": "1.0.0",
  "description": "Enhanced features for Live Chess Cloud viewer",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://view.livechesscloud.com/*",
    "https://*.pool.livechesscloud.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://view.livechesscloud.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": false,
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["request-interceptor.js"],
      "matches": ["https://view.livechesscloud.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

